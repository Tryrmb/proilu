package modele;

/**
 * Classe Educateur
 * Représente un éducateur avec son rôle spécifique.
 */
public class Educateur {
    private String nom;
    private String email;
    private String motDePasse;
    private String categorieActivite;

    public Educateur(String nom, String email, String motDePasse, String categorieActivite) {
        this.nom = nom;
        this.email = email;
        this.motDePasse = motDePasse;
        this.categorieActivite = categorieActivite;
    }

    public String getNom() {
        return nom;
    }

    public String getEmail() {
        return email;
    }

    public String getMotDePasse() {
        return motDePasse;
    }

    public String getCategorieActivite() {
        return categorieActivite;
    }
}
